<link rel="stylesheet" href="/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/custom.css">
<fest:template xmlns:fest="http://fest.mail.ru"
          context_name="json">
          <body>
          	<div id="content" class="container">
            	<div class="page-header">
              		<h2 class="text-center">Epic Game</h2>
            	</div>
            	<div class="row">
              		<div class="col-md-4">
              		</div>
              		<div class="col-md-4">
                		<div class="jumbotron">
                			<form class="login-form form-inline" action="/login" method="POST">
                				<div class="form-group">
                					<div class="input-group">
                						<div class="input-group-addon">
                							<span class="glyphicon glyphicon-user"></span>
                						</div>
                						<input type="text" class="form-control" placeholder="Username" aria-describedby="sizing-addon1" id="username"></input>
                					</div>
                				</div>
                				<div class="form-group">
									        <div class="input-group">
										        <div class="input-group-addon">
											        <span class="glyphicon glyphicon-lock"></span>
										        </div>
										        <input type="password" class="form-control" placeholder="Password" id="password" aria-describedby="sizing-addon1"></input>
									        </div>
								        </div> 
                        <p>
                        <div class="btn-group btn-group-justified">
                          <div class="btn-group">
                            <button type="submit" class="btn  btn-success">Submit</button>
                          </div>
                          <div class="btn-group">
                            <button id="backBtn" type="button" class="btn btn-default">Back</button> 
                          </div>
                        </div>
                        </p>
							        </form>
                		</div>
              		</div>
            	</div>
          	</div>
  <script>  
    $(document).ready(function(){  
      $('#backBtn').click(function(){  
          $.ajax({                        
              cache: false,  
              success: function(html){
                  var $page = $('#page');
                  $page.html(mainTmpl());  
                  
              }  
          });  
      });  
    })
  </script> 
</body>
   
</fest:template>
