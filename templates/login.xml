<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">

<div class="login">
  <form class="login__form">
    <div class="login__form__inputgroup">
      <div class="login__form__inputgroup__line">
        <input type="text" class="login__form__inputgroup__line__input" placeholder="Username" name="name" id="name"></input>
      </div>
      <p class="login__form__inputgroup__help" id="namehelp"></p>
    </div>

    <div class="login__form__inputgroup">
      <div class="login__form__inputgroup__line">
        <input type="password" class="login__form__inputgroup__line__input"
            placeholder="Password" name="password" id="password">
        </input>
      </div>
      <p class="login__form__inputgroup__help" id="passwordhelp"></p>
    </div>

    <div class="login__form__inputgroup">
      <button type="submit" class="login__form__inputgroup__submitbtn">Log in</button>
    </div>
  </form>
</div>

</fest:template>

