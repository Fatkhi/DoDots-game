<fest:template xmlns:fest="http://fest.mail.ru" context_name="json">

<div class="login">
  <form class="login__form">

    <div class="login__form__inputgroup">
      <div class="login__form__inputgroup__line">
        <span class="login__form__inputgroup__line__icon">
          <span class="glyphicon glyphicon-user"></span>
        </span>
        <input type="text"
               class="login__form__inputgroup__line__input"
               placeholder="Username"
               name="name"
               id="name"></input>
      </div>

      <p class="login__form__inputgroup__help" id="namehelp"></p>
    </div>

    <div class="login__form__inputgroup">
      <div class="login__form__inputgroup__line">
        <span class="login__form__inputgroup__line__icon">
          <span class="glyphicon glyphicon-envelope"></span>
        </span>
        <input type="email"
               class="login__form__inputgroup__line__input"
               placeholder="Email"
               name="email"
               id="email"></input>
      </div>

      <p class="login__form__inputgroup__help" id="emailhelp"></p>
    </div>

    <div class="login__form__inputgroup">
      <div class="login__form__inputgroup__line">
        <span class="login__form__inputgroup__line__icon">
          <span class="glyphicon glyphicon-lock"></span>
        </span>
        <input type="password"
               class="login__form__inputgroup__line__input"
               placeholder="Password"
               name="password"
               id="password"></input>
      </div>
      <p class="login__form__inputgroup__help" id="passwordhelp"></p>
    </div>

    <div class="login__form__inputgroup">
      <button type="submit" class="login__form__inputgroup__submitbtn">
      SignIn!
      </button>
      <a id="backBtn" href="#main"
         class="login__form__inputgroup__backbtn">
         Back
      </a>
    </div>
  </form>
</div>

</fest:template>

