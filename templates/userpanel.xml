<fest:template xmlns:fest="http://fest.mail.ru" context_name="user">

<div class="userpanel">
  <div class="userpanel__userinfo">
    <span class="userpanel__userinfo__name">
      <a href="#userpage">
        <fest:value>user.get('name')</fest:value>
      </a>
    </span>
    <img  class="userpanel__userinfo__picture" alt="Userpicture"/>
  </div>
  <div class="userpanel__btns">
    <span class="userpanel__btns__btn userpanel__btns__btn__logout">
      Logout
    </span>
  </div>
</div>

</fest:template>

