<fest:template xmlns:fest="http://fest.mail.ru"
          context_name="json">

  <div  class="btn-group-vertical" >
      <table class="table">
        <thead>
        <tr>
          <th>
            #
          </th>
          <th>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <fest:space/>User
          </th>
          <th>
            <span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
            <fest:space/>Score
          </th>
        </tr>
        </thead>
        <tbody>
        <fest:each iterate="json.players" index="i" value="v">
        <tr>
          <td><fest:value>parseInt(i)+1</fest:value></td>
          <td><fest:value>v.get('name')</fest:value></td>
          <td><fest:value>v.get('score')</fest:value></td>
        </tr>
        </fest:each>
        </tbody>
      </table>
      <a href="#main" class="btn other_btn">Back</a>
  </div>
</fest:template>
